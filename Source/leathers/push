// do not include files here, because this header may
// be used inside namespaces:
//
// namespace A {
// namespace B {
// #include <.../push>
// ... code ...
// #include <.../pop>
// ... code ...
// } // namespace B
// } // namespace A

// checking boost include guards (for BOOST_CLANG, BOOST_MSVC, ...)
#if !defined(BOOST_CONFIG_HPP)
# error "Please include 'boost/config.hpp'"
#endif

#if defined(LEATHERS_PUSH_)
# error "Not ending 'leathers/push' include detected;"
    "every 'push' must ends with 'pop'; see README.txt for more info"
#else
# define LEATHERS_PUSH_
#endif

#if defined(BOOST_CLANG)
# pragma clang diagnostic push
#endif

#if defined(BOOST_MSVC)
# pragma warning(push)
#endif
